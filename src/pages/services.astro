---
import Layout from "src/layouts/Layout.astro";
import Hero from "@sections/Hero.astro";
import TaxServices from "@sections/TaxServices.astro";
import CallToAction from "@sections/CallToAction.astro";

import { Image } from "@astrojs/image/components";
import heroImg from "@img/services-hero-banner.jpg";
---

<Layout
  seo={{
    metaTitle: "Services | Natural State Tax Advisors",
    metaDescription:
      "Natural State Tax Advisors offers a customer centric approach to tax advising.",
  }}
>
  <Hero img={heroImg} title="Services">
    <div
      class="py-20 max-w-screen-xl mx-auto flex flex-col lg:flex-row items-center lg:items-start justify-between gap-10"
    >
      <div class="max-w-md text-center lg:text-left">
        <h1 class="font-bold text-4xl lg:text-7xl text-text-light">
          Our Services
        </h1>
        <p class="mt-7 font-rubik font-semibold text-xl text-text-off-white">
          Services designed to help you manage your tax affairs.
        </p>
      </div>
      <Image
        quality={100}
        format="webp"
        src={import("@img/services-hero.jpg")}
        alt="Natural State Tax Advisors ready to help"
      />
    </div>
  </Hero>
  <TaxServices />
  <CallToAction />
</Layout>
