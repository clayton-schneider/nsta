---
import "../styles.css";
import Footer from "@components/Footer/Footer.astro";
import SEO from "@components/SEO.astro";
export interface Props {
  seo: {
    metaTitle: string;
    metaDescription: string;
  };
}

const { seo } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <SEO metaTitle={seo.metaTitle} metaDescription={seo.metaDescription} />
    <script type="text/partytown" data-domain="nstaxadvisors.com" src="https://plausible.io/js/script.js"></script>
  </head>
  <body>
    <main>

      <div class="bg-red-500 p-5">
        <p class="font-bold text-center">Due to recent storms our office is without power. As a result our office is closed until further notice. Many of our staff will be working from home in limited capacity. If you are in need of immediate assistance please call 479-402-5402</p>
      </div>
      <slot />
    </main>
    <Footer />
  </body>
</html>
